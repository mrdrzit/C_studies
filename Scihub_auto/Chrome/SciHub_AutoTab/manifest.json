{
    "name": "Scihub automation",
    "description": "Scihub extension to automate the paper opening task",
    "version": "2.2.0",
    "manifest_version": 3,
    "background": {
        "service_worker": "background.js"
    },
    "permissions": ["storage", "activeTab", "scripting", "tabs"],
    "action": {
        "default_icon": {
            "16": "/images/sci_hub16.png",
            "32": "/images/sci_hub32.png",
            "48": "/images/sci_hub48.png",
            "128": "/images/sci_hub128.png"
          }
      },
    "icons": {
        "16": "/images/sci_hub16.png",
        "32": "/images/sci_hub32.png",
        "48": "/images/sci_hub48.png",
        "128": "/images/sci_hub128.png"
    }
}